<div class="container">
  <div class="row m-5 pl-5">
    <h3>社員一覧</h3>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th></th>
            <th><%= "社員名" %></th>
            <th><%= "部署" %></th>
            <th><%= "社員番号" %></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th>
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :image, format: 'png', fallback: "no-image-icon.jpg", size: "60x60" %>
                <% end %>
              </th>
              <td><%= user.name %></td>
              <td><%= user.department %></td>
              <td><%= user.user_code %></td>
              <% if user == current_user %>
                <td><%= link_to '編集', edit_user_path(user.id), class: "btn btn-sm btn-success edit_user_#{user.id}" %></td>
                <td><%= link_to '社員消去', user_path(user.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_user_#{user.id}"%></td>
              <% else %>
                <th></th>
                <th></th>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>

</div>