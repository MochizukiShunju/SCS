<div class="container">
  <div class="row m-5 pl-5">
    <h3>社員詳細</h3>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col">
      <%= attachment_image_tag @user, :image, :fill, 400, 400, format: 'jpeg', fallback: "no-image-icon.jpg" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>社員名</th>
            <th>部署</th>
            <th>社員番号</th>
          </tr>
        </thead>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.department %></td>
          <td><%= @user.user_code %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-2"></div>
    <div class="col-8">
      <% if @user == current_user %>
        <%= link_to '社員編集', edit_user_path(@user.id), class: "btn btn-sm btn-success edit_user_#{@user.id} form-control" %>
        <%= link_to '社員消去', user_path(@user.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_user_#{@user.id} form-control mt-3"%>
        <%= link_to 'ブックマーク一覧', users_bookmark_path, class: "btn btn-sm btn-warning users_bookmark form-control mt-3 mb-3" %>
      <% end %>
    </div>
</div>
