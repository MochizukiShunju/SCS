<div class="container">
  <div class="row m-5 pl-5">
    <h3>社員編集</h3>
    <div class="mx-auto">
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <%= f.label "氏名" %>
          <%= f.text_field :name, class: "form-control-file name" %>
        </div>

        <div class="form-group">
          <%= f.label "部署" %>
          <%= f.text_field :department, class: "form-control-file department" %>
        </div>

        <div class="form-group">
          <%= f.label "社員番号" %>
          <%= f.text_field :user_code, class: "form-control-file user_code" %>
        </div>

        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, class: "form-control-file email" %>
        </div>

        <div class="form-group">
          <%= f.label "社員画像" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

