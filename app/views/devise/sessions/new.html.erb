<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h2 class="text-center mt-2">ログイン</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label "名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary form-control" %>
        </div>
      <% end %>

      <p class="text-center text-danger mt-2">登録してない社員はこちら</p>

      <div class="field">
        <%= link_to "新規社員登録", new_user_registration_path, class: "btn btn-success form-control" %>
      </div>
    </div>
  </div>
</div>
