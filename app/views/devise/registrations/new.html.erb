
<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h2 class="text-center mt-2">新規社員登録</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label '名前' %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label '部署' %><br />
          <%= f.text_field :department, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label '社員番号' %><br />
          <%= f.text_field :user_code, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label 'パスワード' %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions mt-3 ">
          <%= f.submit "新規社員登録", class: "btn btn-primary form-control" %>
        </div>
      <% end %>

      <p class="text-center text-danger mt-2">すでに登録している社員はこちら</p>

      <div class="field">
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-success form-control" %>
      </div>
    </div>
  </div>
</div>



