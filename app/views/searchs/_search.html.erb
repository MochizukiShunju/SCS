<% if user_signed_in? %>
  <div class="search-form">
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "社員" => "user", "部品" => "item" }) %>
      <%= submit_tag '検索', class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>