<div class="container">
  <div class="row row m-5 pl-5">
    <h3>新規登録</h3>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <%= render 'layouts/errors', obj: @item %>
      <%= form_with model: @item,url: items_path,local:true do |f| %>

        <div class="form-group">
          <%= f.label "部品名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "型式" %>
          <%= f.text_field :model, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "個数" %>
          <%= f.text_field :amount, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "値段" %>
          <%= f.text_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "メーカー" %>
          <%= f.text_field :maker, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "保管場所" %>
          <%= f.text_field :position, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "購入元" %>
          <%= f.text_field :retailer, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "概要" %>
          <%= f.select :status, [["注文中", "注文中"], ["納品済み", "納品済み"]], class: '' , required: true %>
        </div>

        <div class="form-group">
          <%= f.label "商品画像" %>
          <%= f.attachment_field :item_image %>
        </div>

        <div class="form-group">
          <%= f.submit '部品を登録', class: 'form-control btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>