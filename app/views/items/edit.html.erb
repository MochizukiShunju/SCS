<div class="container">
  <div class="row m-5 pl-5">
    <h3>部品編集</h3>
    <div class="mx-auto">
      <%= form_with model: @item, local:true do |f| %>
        <div class="form-group">
          <%= f.label "部品名" %>
          <%= f.text_field :name, class: "form-control-file name" %>
        </div>

        <div class="form-group">
          <%= f.label "型式" %>
          <%= f.text_field :model, class: "form-control-file model" %>
        </div>

        <div class="form-group">
          <%= f.label "個数" %>
          <%= f.text_field :amount, class: "form-control-file amount" %>
        </div>

        <div class="form-group">
          <%= f.label "値段" %>
          <%= f.text_field :price, class: "form-control-file price" %>
        </div>

        <div class="form-group">
          <%= f.label "メーカー" %>
          <%= f.text_field :maker, class: "form-control-file marker" %>
        </div>

        <div class="form-group">
          <%= f.label "購入元" %>
          <%= f.text_field :retailer, class: "form-control-file retailer" %>
        </div>

        <div class="form-group">
          <%= f.label "概要" %>
          <%= f.select :status, [["注文中", "注文中"], ["納品済み", "納品済み"]], class: '' , required: true %>
        </div>

        <div class="form-group">
          <%= f.label "部品画像" %>
          <%= f.attachment_field :item_image %>
        </div>
        <div class="form-group">
          <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

